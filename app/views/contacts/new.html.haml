%section.key-visual
  .container.container-xs
    .title-container
      .page-title
        협업 문의
      .page-subtitle.text-keep-all
        활동 영역 별 다양한 방식으로 여러분과 협업합니다.
  .envelope
    = image_tag 'contact-envelope.png'

%section.form
  .container.container-xs
    = form_with model: @contact, local: true, id: 'js-contact-form' do |f|
      %fieldset
        %legend 프로젝트 정보

        .alert.alert-secondary.help-text
          * 는 반드시 입력해 주세요.

        .form-group
          = f.label :project_subject
          = f.text_field :project_subject, class: 'form-control'
        .form-group
          = f.label :project_body
          = f.text_area :project_body, class: 'form-control', placeholder: '프로젝트 소개, 기간, 예산'
        .form-group
          = f.label :solution_slug
          = f.select :solution_slug, Post::SOLUTIONS.map { |solution| [ raw(solution[:title]), solution[:slug] ] }, { prompt: "솔루션 선택..." }, class: 'form-control'
        .form-group
          = f.label :attachment
          = f.file_field :attachment, class: 'form-control'
      %fieldset
        %legend 연락처
        .form-group
          = f.label :contact_org
          = f.text_field :contact_org, class: 'form-control'
        .form-group
          = f.label :contact_manager
          = f.text_field :contact_manager, class: 'form-control'
        .form-group
          = f.label :contact_tel
          = f.text_field :contact_tel, class: 'form-control'
        .form-group
          = f.label :contact_email
          = f.email_field :contact_email, class: 'form-control'
        .form-group
          .form-check
            = f.check_box :confirm, class: 'form-check-input', id: 'contact-form-confirm'
            %label.form-check-label{ for: :confirm }<>
              = link_to '개인정보 수집 및 처리', privacy_path, target: '_blank', style: 'text-decoration: underline'
              에 동의합니다.

        = f.submit '협업문의하기', class: 'btn btn-primary btn-block'
