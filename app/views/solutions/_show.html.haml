%section.base-key-visual
  .base-line
    .container
      .base-title-container
        .base-page-subtitle
          != info[:subtitle]
        .base-page-title
          != info[:title]

= content

- if info[:items].any?
  %section.tiles.tiles-portfolio
    .tiles-title-line
      .container
        .tiles-title
          솔루션
    .container
      .tiles-container<>
        - info[:items].each do |item|
          .tile-container<>
            .tile
              .tile-cover{ style: (item[:image_path].present? ? "background-image: url(#{asset_url("solutions/#{info[:slug]}/#{item[:image_path]}")})" : "background-image: url(#{asset_url('samples/home/whatwedo/card1.png')})") }
              .tile-meta
                .title
                  != item[:title]
                .body
                  != item[:description]

- if info[:portfolios].any?          
  %section.tiles.tiles-portfolio
    .tiles-title-line
      .container
        .tiles-title
          포트폴리오
    .container
      .tiles-container<>
        - info[:portfolios].each do |portfolio|
          .tile-container<>
            .tile
              .tile-cover{ style: (portfolio[:image_path].present? ? "background-image: url(#{asset_url("solutions/#{info[:slug]}/#{portfolio[:image_path]}")})" : "background-image: url(#{asset_url('samples/home/whatwedo/card1.png')})") }
              .tile-meta
                .title
                  != portfolio[:title]
                .body
                  != portfolio[:description]

%section.tiles.tiles-what-we-do
  .tiles-title-line
    .container
      .tiles-title.text-keep-all
        이 솔루션으로 하는 일
  .container.container-full
    .tiles-container
      - Post.published.recent.by_solution_slug(info[:slug]).limit(3).each do |post|
        .tile-container<>
          .tile
            .tile-meta
              .title!= post.title
              .created-at= static_day_f post.published_at
      .tile-container<>
        = link_to what_we_do_path(solution_slug: info[:slug]), class: 'tile tile-more' do
          .more-link
            하는 일 더 보기
          .more-icon
            %i.fas.fa-arrow-right