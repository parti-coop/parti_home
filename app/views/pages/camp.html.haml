:scss
  /* intro */
  /* btn */
  /* content */
  /* program */
  /* review */
  /* artice */
  body {
    padding: 0;
    font-family: "Noto Sans KR";
    color: #34303C;
    font-size: 18px;
    letter-spacing: -0.6px;
    background-color: #f2f3f4;
    word-break: keep-all;
  }
  div {
    margin: 0;
    padding: 0;
  }
  p {
    margin: 0;
    padding: 0;
  }
  span {
    margin: 0;
    padding: 0;
  }
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  li {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  strong {
    margin: 0;
    padding: 0;
    font-weight: 700;
  }
  button {
    margin: 0;
    padding: 0;
    border: 0 none;
    font: inherit;
    cursor: pointer;
  }
  a {
    margin: 0;
    padding: 0;
    cursor: pointer;
  }
  img {
    border: 0 none;
  }
  * {
    box-sizing: border-box;
    &:before {
      box-sizing: border-box;
    }
    &:after {
      box-sizing: border-box;
    }
  }
  .clearfix {
    &:after {
      display: table;
      content: '';
      clear: both;
    }
  }
  .relative {
    position: relative;
  }
  .camp_dark_purple {
    color: #170540;
  }
  .camp_gray {
    color: #504D56;
  }
  .camp_container {
    width: 1200px;
    margin: 0 auto;
  }
  main.base.camp_open {
    .camp_closed_display {
      display: none;
    }
  }
  main.base.camp_closed {
    .camp_closed_hidden {
      display: none;
    }
    .camp_program {
      margin-bottom: 208px;
    }
  }
  .camp_intro {
    height: 926px;
    background-image: url('#{asset_url('camp_img/camp_bg.png')}');
    background-size: 100% 100%;
    .camp_container {
      height: 100%;
      position: relative;
      padding-top: 100px;
      &:before {
        content: '';
        width: 90px;
        height: 90px;
        position: absolute;
        top: 100px;
        right: 0;
        background-image: url('#{asset_url('camp_img/camp_black_symbol.png')}');
        background-size: 100% 100%;
      }
    }
    .camp_pc_btn.camp_parti_btn {
      line-height: 72px;
      padding: 0 36px 0 48px;
      position: absolute;
      bottom: 368px;
      right: 0;
    }
  }
  .camp_intro_head {
    width: auto;
    height: 40px;
    display: inline-block;
    margin-right: 8px;
  }
  .camp_intro_title {
    font-size: 80px;
    margin: 48px 0;
    letter-spacing: -3px;
    line-height: 1.3;
    font-weight: 700;
  }
  .camp_intro_info {
    font-size: 22px;
    line-height: 2;
    .intro_info_left {
      float: left;
      width: 102px;
      font-weight: 700;
      position: relative;
      &:before {
        content: '';
        width: 1px;
        background-color: #170540;
        position: absolute;
        right: 20px;
        top: 8px;
        bottom: 8px;
      }
    }
    .intro_info_right {
      float: left;
      span {
        vertical-align: top;
      }
      strong {
        vertical-align: top;
      }
    }
    .time_m_out {
      font-size: 16px;
    }
    .time_m_only {
      display: none;
    }
  }
  .camp_parti_btn {
    background-color: #170540;
    color: #fff;
    border-radius: 10px;
    transition: opacity 0.3s;
    position: relative;
    font-size: 24px;
    &:hover {
      opacity: 70%;
    }
    span {
      display: inline-block;
    }
    &:after {
      content: '';
      width: 36px;
      height: 36px;
      display: inline-block;
      background: url('#{asset_url('camp_img/camp_btn_arrow.png')}');
      background-size: 100% 100%;
      vertical-align: -10px;
    }
  }
  .camp_parti_btn_closed {
    width: auto;
    height: 148px;
    position: absolute;
    top: -148px;
    left: 50%;
    transform: translateX(-50%);
  }
  .camp_content {
    .camp_pc_btn {
      line-height: 84px;
      width: 400px;
      margin: 0 auto;
      display: block;
    }
    margin-top: -304px;
    .camp_container {
      background-color: #fff;
      padding: 0 64px;
    }
    .content_txt_list {
      li {
        line-height: 2;
        margin-top: 6px;
        padding-left: 1em;
        position: relative;
        &:before {
          content: "\2022";
          color: #53E1C6;
          font-weight: 700;
          margin-right: 8px;
          position: absolute;
          left: 0;
          top: 0;
        }
      }
    }
  }
  .camp_m_btn {
    display: none;
  }
  .camp_floating_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    padding: 12px 0;
    z-index: 1;
  }
  .camp_m_btn.camp_parti_btn {
    line-height: 84px;
    width: 100%;
  }
  .camp_m_btn.camp_closed_display {
    position: relative;
    margin-top: 80px;
    bottom: -32px;
  }
  .camp_paragragh {
    line-height: 2;
  }
  .camp_notice.camp_container {
    padding-bottom: 72px;
  }
  .camp_content_head {
    font-size: 36px;
    line-height: 1.4;
    padding: 64px 0 16px;
    font-weight: 700;
    color: #170540;
  }
  .camp_content_title {
    font-size: 24px;
    font-weight: 700;
    margin: 64px 0 12px;
    padding-left: 1.7em !important;
    position: relative;
    .content_title_emoji {
      font-size: 28px;
      position: absolute;
      left: 0;
      top: -4px;
    }
    .program_top_date {
      float: right;
      margin-top: 8px;
      font-size: 20px;
    }
  }
  .camp_program {
    .program_dot_list {
      li {
        &:before {
          content: "\2022";
          color: #53E1C6;
          font-weight: 700;
          margin-right: 8px;
        }
      }
      line-height: 1.8;
      margin-bottom: 16px;
    }
    padding-bottom: 16px;
    border-bottom: 2px solid #170540;
    margin-top: 8px;
    margin-bottom: 60px;
    .program_tag_list {
      li {
        display: inline-block;
        margin-right: 10px;
      }
    }
  }
  .camp_link_topaz {
    font-weight: 700;
    color: #17CFAC;
    text-decoration: underline;
  }
  .camp_session_time {
    float: left;
    width: 234px;
    border-top: 2px solid #170540;
    padding: 24px 0;
    font-size: 24px;
    position: relative;
  }
  .camp_session_list {
    float: left;
    width: 838px;
    >li {
      padding: 24px 0;
      border-top: 2px solid #170540;
    }
  }
  .camp_program_title {
    width: 56%;
    float: left;
    font-size: 24px;
    line-height: 1.5;
  }
  .camp_program_content {
    width: 44%;
    float: left;
    font-size: 14px;
  }
  .camp_select_one {
    color: #818181;
    font-size: 18px;
    border: 1px solid #818181;
    width: 46px;
    line-height: 28px;
    text-align: center;
    margin-top: 16px;
    display: inline-block;
  }
  .camp_review.camp_container {
    background-color: #f8f8f8;
  }
  .camp_review {
    .camp_content_head {
      padding-bottom: 0;
    }
  }
  .camp_review_list {
    margin-top: 16px;
    font-size: 16px;
    line-height: 1.7;
    li {
      width: 336px;
      margin-left: 32px;
      color: #504D56;
      padding: 32px 30px;
      background-color: #fff;
      float: left;
      &:first-child {
        margin-left: 0;
      }
    }
    .review_list_emoji {
      font-size: 36px;
      margin-bottom: 8px;
    }
    .review_list_writer {
      margin-top: 16px;
    }
  }
  .camp_article.camp_container {
    padding-top: 126px;
    padding-bottom: 56px;
    margin-top: -126px;
    background-color: #DBF5F0;
  }
  .camp_article_wrap {
    position: relative;
    margin-top: 16px;
  }
  .camp_article_img {
    width: 262px;
    height: auto;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 4px;
  }
  .camp_article_img_m {
    display: none;
  }
  .camp_article_txt {
    padding-left: 296px;
    letter-spacing: -0.4px;
  }
  .camp_article {
    .camp_content_head {
      color: inherit;
    }
    .article_line_clamp {
      line-height: 1.8;
      display: -webkit-box;
      overflow: hidden;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      word-break: break-all;
    }
    .article_title {
      font-weight: 700;
      font-size: 19px;
      line-height: 2;
    }
    .camp_link_topaz {
      font-size: 20px;
      display: inline-block;
      margin-top: 8px;
    }
  }
  .camp_contact.camp_container {
    padding-bottom: 48px;
  }
  .camp_contact {
    .camp_content_title {
      padding-top: 48px;
      margin-top: 0;
    }
    .content_title_emoji {
      top: inherit;
      bottom: -4px;
    }
  }
  .camp_footer {
    padding: 48px 0 80px;
    text-align: center;
  }
  .camp_footer_img {
    width: 406px;
    height: auto;
    max-width: 80%;
  }
  @media screen and (max-width: 1380px) {
    .camp_container {
      width: 100%;
      padding: 0 5%;
      padding-left: 5% !important;
      padding-right: 5% !important;
    }
    .camp_intro {
      height: auto;
      .camp_container {
        height: auto;
        width: 90%;
        padding-left: 0 !important;
        padding-right: 0 !important;
        margin: 0 auto;
      }
    }
    .camp_intro_info {
      padding-bottom: 32px;
    }
    .camp_pc_btn {
      display: none !important;
    }
    .camp_m_btn {
      display: block;
    }
    .camp_content {
      background-color: #fff;
      margin-top: 0;
    }
    main.base.camp_closed {
      .camp_content {
        padding-top: 20px;
      }
      .camp_intro_info {
        .time_m_out {
          bottom: -60px;
        }
      }
      .camp_program {
        margin-bottom: 0;
      }
    }
    .camp_parti_btn_closed {
      transform: none;
      right: 0;
      left: inherit;
    }
    .camp_program {
      margin-bottom: 0;
    }
    .camp_session_time {
      width: 100%;
    }
    .camp_session_list {
      width: 100%;
      >li {
        border-top-width: 1px;
      }
    }
    .camp_select_one {
      position: absolute;
      bottom: 24px;
      right: 0;
    }
    .camp_review_list {
      li {
        width: 80%;
        margin-left: 0;
        margin-top: 20px;
        &:first-child {
          margin-top: 0;
        }
      }
      li.second {
        width: 80%;
        margin-left: 20%;
      }
    }
    .camp_article {
      padding: 80px 0 48px;
      margin-top: -80px;
    }
    main.base.camp_open {
      .camp_footer {
        padding-bottom: 140px;
      }
    }
  }
  @media screen and (max-width: 940px) {
    .camp_intro_title {
      font-size: 70px;
      letter-spacing: inherit;
    }
    .camp_intro {
      .camp_container {
        &:before {
          width: 70px;
          height: 70px;
        }
      }
    }
    .camp_program_title {
      width: 100%;
    }
    .camp_program_content {
      width: 100%;
      margin-top: 20px;
    }
  }
  @media screen and (max-width: 768px) {
    body {
      font-size: 14px;
    }
    .camp_notice.camp_container {
      padding-bottom: 48px;
    }
    .camp_intro {
      .camp_container {
        padding-top: 40px;
        &:before {
          top: 40px;
        }
      }
    }
    .camp_intro_head {
      height: 20px;
    }
    .camp_intro_title {
      font-size: 32px;
      margin: 36px 0 28px;
    }
    .camp_intro_info {
      font-size: 14px;
      .intro_info_left {
        width: 60px;
        &:before {
          top: 6px;
          bottom: 6px;
          right: 10px;
        }
      }
      .time_m_only {
        display: inline;
      }
      .time_m_out {
        position: absolute;
        bottom: -32px;
        right: 0;
        font-size: 12px;
      }
    }
    .camp_content_head {
      font-size: 20px;
      padding: 48px 0 16px;
    }
    .camp_content_title {
      font-size: 20px;
      margin: 48px 0 12px;
      .content_title_emoji {
        font-size: 24px;
      }
      .program_top_date {
        font-size: 16px;
        margin-top: 6px;
      }
    }
    .camp_session_time {
      font-size: 18px;
      padding: 10px 0;
    }
    .camp_select_one {
      bottom: 10px;
    }
    .camp_session_list {
      >li {
        padding: 20px 0;
      }
    }
    .camp_program_title {
      font-size: 18px;
    }
    .camp_program_content {
      margin-top: 16px;
      font-size: 12px;
    }
    .camp_review {
      .camp_content_head {
        display: none;
      }
      .review_list_emoji {
        font-size: 28px;
      }
      .review_list_writer {
        margin-top: 8px;
      }
      .camp_content_title {
        font-size: 18px;
        margin-top: 0;
        padding-top: 32px;
      }
      .content_title_emoji {
        top: inherit;
        bottom: -4px;
      }
    }
    .camp_review_list {
      li {
        padding: 18px 16px;
        font-size: 14px;
        margin-top: 16px;
      }
    }
    .camp_article.camp_container {
      padding-bottom: 40px;
    }
    .camp_article_wrap {
      margin-top: 4px;
    }
    .camp_article_img {
      display: none;
    }
    .camp_article_txt {
      padding-left: 0;
    }
    .camp_article {
      .article_title {
        font-size: 16px;
      }
      .camp_link_topaz {
        font-size: 18px;
      }
    }
    .camp_contact {
      .camp_content_title {
        padding-top: 32px;
        margin-top: 0;
      }
    }
    .camp_footer {
      padding: 24px 0 40px;
    }
    .camp_m_btn.camp_parti_btn {
      font-size: 18px;
      line-height: 60px;
    }
    .camp_m_btn.camp_closed_display {
      margin-top: 40px;
    }
    .camp_parti_btn {
      &:after {
        width: 24px;
        height: 24px;
        vertical-align: -5.5px;
      }
    }
    .camp_parti_btn_closed {
      height: 90px;
      top: -90px;
    }
  }
  @media screen and (max-width: 600px) {
    .camp_container {
      padding-left: 20px !important;
      padding-right: 20px !important;
    }
    .camp_article {
      .article_line_clamp {
        -wekit-line-clamp: 3;
        -webkit-box-orient: vertical;
      }
      .article_title {
        font-size: 15px;
      }
      .camp_link_topaz {
        font-size: 16px;
      }
    }
    .camp_floating_btn {
      display: block;
      padding: 0 !important;
      .camp_container {
        padding: 0 !important;
      }
      .camp_parti_btn {
        border-radius: 0;
      }
    }
    .camp_article_wrap {
      margin-top: 16px;
    }
    .camp_article_img_m {
      display: block;
      width: 100%;
      height: auto;
      margin-bottom: 4px;
      border-radius: 4px;
    }
    .camp_article_txt {
      padding: 8px 0 0;
      font-size: 14px;
      width: 100%;
    }
    main.base.camp_open {
      .camp_footer {
        padding-bottom: 100px;
      }
    }
  }
  @media screen and (max-width: 440px) {
    .camp_intro {
      .camp_container {
        &:before {
          display: none;
        }
      }
    }
    .camp_paragragh {
      p {
        display: inline;
      }
    }
  }

%main.base.camp_open
  .camp_intro.camp_dark_purple
    .camp_container
      %p
        %img.camp_intro_head{art: "빠띠 민주주의 캠프 9월시즌", src: asset_url("camp_img/camp_intro_head.png")}/
        %img.camp_intro_head.camp_closed_display{art: "신청마감", src: asset_url("camp_img/camp_intro_head_closed.png")}/
      .camp_intro_title
        %p 빠띠 민주주의 캠프가
        %p 돌아왔다!
      .camp_intro_info.clearfix
        .intro_info_left
          %p 일시
          %p 장소
          %p 참가비
        .intro_info_right
          %p
            %strong 2021년 9월 29일
            %span (수) 15:00 ~ 21:30
            %span.time_m_only *
            %span.time_m_out.camp_gray
              %span.time_m_only *
              부분 선택 참여가능
          %p 온라인 강의 ( ZOOM )와 빠띠 커뮤니티
          %p 무료
