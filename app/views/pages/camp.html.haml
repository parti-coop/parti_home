:scss
  $parti-violet-0: #7463ad;
  @media (max-width: 1024px) {
    html {
      height: -webkit-fill-available;
    }
    body {
      min-height: 100vh;
      min-height: -webkit-fill-available;
    }
  }
  main.base {
    word-break: keep-all;
    word-wrap: break-word;
    overflow-wrap: break-word;
    background-color: $parti-violet-0;
    > .key-visual {
      padding-top: 82px;
      padding-bottom: 44px;
      @media (max-width: 1024px) {
        padding-top: 32px;
        padding-bottom: 32px;
      }
      .container-layout {
        display: flex;
        width: 100%;
        > .left {
          flex: none;
        }
        > .right {
          flex: 1;
          position: relative;
        }
        @media (max-width: 1024px) {
          > .left {
            flex: 1;
            max-width: 100%;
          }
          > .right {
            display: none;
          }
        }
      }
      .title {
        margin-bottom: 36px;
        @media (max-width: 1024px) {
          margin-bottom: 16px;
        }
        > img {
          width: 304px;
          margin-right: 24px;
          vertical-align: text-bottom;
        }
        > .text {
          font-size: 26px;
          font-weight: 500;
          color: white;
          vertical-align: bottom;
        }
        @media (max-width: 1024px) {
          > img {
            width: 165px;
            margin-right: 8px;
          }
          > .text {
            font-size: 16px;
          }
        }
      }
      .lead > img {
        width: 600px;
        margin-bottom: 44px;
        @media (max-width: 1024px) {
          max-width: 600px;
          width: 100%;
          margin-bottom: 42px;
        }
      }
      .info > tbody {
        > .item {
          > .header,
          > .chevron,
          > .main {
            vertical-align: top;
          }
          > .header {
            font-size: 22px;
            font-weight: bold;
            color: white;
          }
          > .chevron {
            font-size: 22px;
            .fa {
              color: #10ffa0;
              margin-left: 8px;
              margin-right: 8px;
            }
          }
          > .main {
            .content,
            .help {
              display: inline;
            }
            .content {
              font-size: 22px;
              color: white;
              .help {
                font-size: 16px;
                opacity: 0.6;
              }
            }
          }
          @media (max-width: 1024px) {
            > .header,
            > .chevron {
              font-size: 14px;
            }
            > .main {
              .content {
                font-size: 14px;
                .help {
                  font-size: 10px;
                }
              }
            }
          }
        }
      }
      .app {
        position: absolute;
        top: 0;
        right: 0;
        > img {
          width: 88px;
          height: 88px;
        }
      }
      .cta {
        position: absolute;
        bottom: 0;
        right: 0;
        > .btn {
          padding: 16px 44px;
          border-radius: 6px;
          background-color: #10ffa0;
          font-size: 24px;
          font-weight: 500;
          color: $parti-violet-0;
        }
      }
    }
    > .intro {
      .container-layout {
        padding: 64px;
        background-color: #f1f1f1;
        @media (max-width: 1024px) {
          margin-left: -15px;
          margin-right: -15px;
          padding: 32px 16px;
        }
      }
      .edge {
        font-size: 36px;
        font-weight: bold;
        color: $parti-violet-0;
        margin-bottom: 16px;
      }
      .text {
        font-size: 18px;
        color: $parti-violet-0;
        > .strong {
          font-weight: bold;
        }
      }
      .reviews {
        display: flex;
        > .review {
          flex: 1;
          padding-left: 16px;
          padding-right: 16px;
          &:first-child {
            padding-left: 0;
          }
          &:right-child {
            padding-right: 0;
          }
          > .box {
            padding: 32px;
            background-color: white;
            > .icon {
              font-size: 36px;
            }
            > .text,
            > .byline {
              font-size: 18px;
              color: #666666;
              margin-bottom: 16px;
            }
            > .byline {
              text-align: right;
            }
          }
        }
      }
      .blog {
        text-align: center;
        margin-top: 24px;
        > .blog-btn {
          > .img {
            max-width: 560px;
            width: 100%;
            &.-xs {
              display: none;
            }
          }
        }
      }
      @media (max-width: 1024px) {
        .edge {
          font-size: 20px;
        }
        .text {
          font-size: 14px;
        }
        .reviews {
          display: block;
          > .review {
            padding-left: 43px;
            padding-right: 0;
            &:nth-child(odd) {
              padding-left: 0;
              padding-right: 43px;
            }
            > .box {
              padding: 16px;
              > .icon {
                font-size: 28px;
              }
              > .text,
              > .byline {
                font-size: 14px;
              }
            }
          }
          > .review + .review {
            margin-top: 16px;
          }
        }
        .blog {
          > .blog-btn {
            > .img {
              display: none;
            }
            > .img.-xs {
              display: inline-block;
            }
          }
        }
      }
    }
    > .details {
      .container-layout {
        padding: 64px;
        background-color: white;
        @media (max-width: 1024px) {
          margin-left: -15px;
          margin-right: -15px;
          padding: 32px 16px;
        }
        > .detail {
          &:not(:first-child):not(:last-child) {
            margin-top: 64px;
            margin-bottom: 64px;
          }
          > .title {
            font-size: 24px;
            font-weight: bold;
            color: $parti-violet-0;
            margin-bottom: 16px;
            > .small {
              display: inline;
              font-size: 18px;
            }
          }
          > .items {
            padding-left: 16px + 6px;
            @media (max-width: 1024px) {
              padding-left: 6px + 3px;
            }
            > .item {
              font-size: 18px;
              color: #666666;
              position: relative;
              > .strong {
                display: inline-block;
                font-weight: bold;
              }
              > .cta {
                color: #4bc6af;
                text-decoration: underline;
                font-weight: bold;
              }
              &:before {
                content: ' ';
                width: 6px;
                height: 6px;
                background-color: $parti-violet-0;
                display: inline-block;
                position: absolute;
                left: (16px + 3px) * -1;
                top: 27px * 0.5 - 6px * 0.5;
                border-radius: 999999px;
                @media (max-width: 1024px) {
                  left: (12px * 0.5 + 3px) * -1;
                  top: 21px * 0.5 - 6px * 0.5;
                }
              }
            }
          }
          > .table,
          > .table td {
            border: 1px solid $parti-violet-0;
          }
          > .table {
            &.table-lg {
              display: table;
            }
            &.table-sm {
              display: none;
            }
            table-layout: fixed;
            margin-bottom: 32px;
            td.toc,
            td.day {
              width: 10%;
            }
            td.track,
            td.lecture {
              width: 30%;
            }
            td.toc,
            td.track {
              background-color: #f7f7f7;
            }
            td.day {
              padding-top: 32px;
              font-size: 24px;
              font-weight: bold;
              color: $parti-violet-0;
              > .small {
                font-size: 18px;
              }
            }
            td.track {
              font-size: 32px;
              font-weight: bold;
              color: $parti-violet-0;
              text-align: center;
              > .small {
                display: inline;
                font-size: 12px;
                color: rgba(116, 99, 173, 0.54);
              }
            }
            td.lecture {
              padding: 32px;
              > .name {
                font-size: 24px;
                color: #666666;
                margin-bottom: 16px;
                > .strong {
                  font-weight: bold;
                }
              }
              > .items {
                margin-bottom: 8px;
                padding-left: 14px + 6px;
                @media (max-width: 1024px) {
                  padding-left: 6px + 3px;
                }
                > .item {
                  font-size: 14px;
                  color: #666666;
                  position: relative;
                  &:before {
                    content: ' ';
                    width: 4px;
                    height: 4px;
                    background-color: $parti-violet-0;
                    display: inline-block;
                    position: absolute;
                    left: (14px + 3px) * -1;
                    top: 21px * 0.5 - 6px * 0.5;
                    border-radius: 999999px;
                    @media (max-width: 1024px) {
                      left: (12px * 0.5 + 3px) * -1;
                      top: 18px * 0.5 - 6px * 0.5;
                    }
                  }
                }
              }
              > .tags {
                > .tag {
                  font-size: 14px;
                  color: $parti-violet-0;
                  display: inline;
                  white-space: nowrap;
                  margin-right: 8px;
                  &.strong {
                    font-weight: bold;
                  }
                }
              }
            }
          }
          > .cta {
            text-align: center;
            .btn {
              padding: 16px 125px 16px;
              border-radius: 6px;
              background-color: #10ffa0;
              font-size: 24px;
              font-weight: 500;
              color: $parti-violet-0;
            }
          }
          @media (max-width: 1024px) {
            > .title {
              font-size: 20px;
              > .small {
                font-size: 16px;
              }
            }
            > .items {
              > .item {
                font-size: 14px;
              }
            }
            > .table {
              &.table-lg {
                display: none;
              }
              &.table-sm {
                display: table;
              }
              td.day {
                background-color: #f7f7f7;
                padding: 16px;
                font-size: 18px;
                > .small {
                  font-size: 14px;
                  display: inline;
                }
              }
              td.day {
                width: auto;
              }
              col.track,
              td.track {
                width: 20%;
                line-height: 1.8rem;
                vertical-align: middle;
                font-size: 24px;
                .small {
                  font-size: 10px;
                  display: block;
                }
              }
              col.lecture,
              td.lecture {
                width: 80%;
                padding: 24px 8px;
                > .name {
                  font-size: 18px;
                }
                > .items {
                  > .item {
                    font-size: 12px;
                  }
                }
                > .tags {
                  .tag {
                    font-size: 12px;
                  }
                }
              }
            }
            > .cta {
              display: none;
            }
          }
        }
      }
    }
    > .contact {
      .container-layout {
        padding: 64px;
        background-color: white;
        @media (max-width: 1024px) {
          margin-left: -15px;
          margin-right: -15px;
          padding: 32px 16px;
        }
        > .edge {
          font-size: 36px;
          font-weight: bold;
          color: $parti-violet-0;
          margin-bottom: 16px;
          @media (max-width: 1024px) {
            font-size: 20px;
          }
        }
        > .items {
          padding-left: 16px + 6px;
          @media (max-width: 1024px) {
            padding-left: 6px + 3px;
          }
          > .item {
            font-size: 18px;
            @media (max-width: 1024px) {
              font-size: 14px;
            }
            color: #666666;
            position: relative;
            > .strong {
              display: inline-block;
              font-weight: bold;
            }
            > .link {
              text-decoration: underline;
              color: $parti-violet-0;
            }
            &:before {
              content: ' ';
              width: 6px;
              height: 6px;
              background-color: $parti-violet-0;
              display: inline-block;
              position: absolute;
              left: (16px + 3px) * -1;
              top: 27px * 0.5 - 6px * 0.5;
              border-radius: 999999px;
              @media (max-width: 1024px) {
                left: (12px * 0.5 + 3px) * -1;
                top: 21px * 0.5 - 6px * 0.5;
              }
            }
          }
        }
      }
    }
    > .sponsored-by {
      .container-layout {
        padding: 64px;
        background-color: #f1f1f1;
        @media (max-width: 1024px) {
          margin-left: -15px;
          margin-right: -15px;
          padding: 32px 16px;
        }
        .content {
          text-align: center;
          font-size: 18px;
          font-weight: bold;
          color: #666666;
          .link > .osf {
            height: 30px;
            vertical-align: bottom;
          }
          > .br {
            display: none;
            @media (max-width: 1024px) {
              display: block;
            }
          }
          @media (max-width: 425px) {
            text-align: left;
          }
          @media (max-width: 1024px) {
            font-size: 14px;
          }
        }
      }
    }
    > .fixed-cta {
      position: fixed;
      bottom: 0;
      width: 100vw;
      display: none;
      @media (max-width: 1024px) {
        display: block;
      }
      > .cta > .btn {
        padding: 16px 44px;
        border-radius: 6px;
        background-color: #10ffa0;
        font-size: 24px;
        font-weight: 500;
        color: $parti-violet-0;
      }
    }
    &.-closed {
      > .key-visual {
        .container-layout {
          @media (max-width: 1024px) {
            flex-direction: column;
            > .right {
              display: block;
            }
          }
        }
        @media (max-width: 1024px) {
          .app {
            display: none;
          }
          .cta {
            margin-top: 20px;
            position: initial;
            .end {
              width: 100%;
            }
            > .btn {
              display: block;
            }
          }
        }
        .cta {
          text-align: right;
          > .end {
            width: 478px;
          }
        }
      }
    }
    > .details {
      .container-layout {
        > .detail {
          > .cta {
            > .end {
              width: 378px;
            }
          }
        }
      }
    }
  }

%main.base
  %section.key-visual
    .container
      .container-layout
        .left
          .title
            =image_tag 'camp/title.svg'
            %span.text 5월 시즌
          .lead
            =image_tag 'camp/lead.png'
          %table.info
            %tbody
              %tr.item
                %th.header 일시
                %td.chevron
                  %i.fa.fa-chevron-right
                %td.main
                  .content
                    %span.text-nowrap 2021. 5. 26. ~ 27.
                    %span.text-nowrap 19:30 ~ 21:30 (수/목)
                    %span.text-nowrap
                      중 선택
                      .help.text-nowrap 양일 선택 참여 가능
              %tr.item
                %th.header 장소
                %td.chevron
                  %i.fa.fa-chevron-right
