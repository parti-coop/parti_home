- if controller_name != 'contacts'
  %section.contacts
    .container.container-sm
      .base-section-title
        빠띠와 협업하기
      .base-section-desc
        Nam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit
      .contact-button-container
        = link_to new_contact_path,  class: 'btn btn-default btn-contact' do
          협업 문의하기
      .contact-envelope
        = image_tag 'contact-envelope.png'

%footer.app-footer
  .container-fluid
    .logo
      빠띠
    .utils
      .utils-left
        .util
          = link_to '개인보호정책', '#'
        .util
          = link_to 'https://github.com/parti-coop' do
            %i.fab.fa-github
        .util
          = link_to 'https://facebook.com/PartiUnion' do
            %i.fab.fa-facebook
        .util
          = link_to 'https://twitter.com/parti_coop' do
            %i.fab.fa-twitter
      .utils-right
        .democracy-report-subscribe
          = form_with url: subscribe_reports_path, class: 'form-inline' do |f|
            %label{ for: :email } 민주주의 리포트 구독하기
            = f.text_field :name, placeholder: '이름', id: 'site-subscribe-report-input-name', class: 'form-control'
            = f.email_field :email, placeholder: '이메일 주소', id: 'site-subscribe-report-input-email', class: 'form-control'
            %button.btn.btn-primary.btn-subscribe{ type: :submit } 구독신청
    .license
      Copyright 2019.
      %b Parti Coop.
      %span.text-nowrap All rights reserved.

